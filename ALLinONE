    <script>
        function showPage(page) {
            document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
            document.getElementById(page).classList.add('active');
            document.querySelectorAll('.nav-links a').forEach(a => a.classList.remove('active'));
            document.querySelector(`.nav-links a[href="#${page}"]`).classList.add('active');
            window.scrollTo(0, 0);
        }
        function updateCountdown() {
            const t = new Date('2026-01-23T09:00:00').getTime() - new Date().getTime();
            document.getElementById('days').textContent = Math.floor(t / 864e5);
            document.getElementById('hours').textContent = Math.floor(t % 864e5 / 36e5);
            document.getElementById('minutes').textContent = Math.floor(t % 36e5 / 6e4);
            document.getElementById('seconds').textContent = Math.floor(t % 6e4 / 1e3);
        }
        setInterval(updateCountdown, 1000);
        updateCountdown();
    </script>
